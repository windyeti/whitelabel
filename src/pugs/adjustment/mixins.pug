mixin menu(items)
    ul.menu__items
        each item in items
            each value, key in item
                if key === 'main'
                    li.menu__item.menu__item_active
                        a(href='#' + key).menu__link= value
                else
                    li.menu__item
                        a(href='#' + key).menu__link= value

mixin tool(data)
    a(href='#'+data.src).tool__container.col-sm-6.col-md-4.col-lg-3
        h3.tool__head= data.head
        .tool__icon(class='tool__icon_'+data.src)
        .tool__text= data.text
            .tool__more more>>

mixin customers(items)
    each item in items
        a.customers__customer(class='customers__customer_'+item.src href=item.href)
